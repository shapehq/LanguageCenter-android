<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="32dp"
    android:layout_height="match_parent">

    <com.novasa.languagecenter.view.LanguageCenterTextView
        android:id="@+id/text_with_in_xml"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:text="@string/languagecenter_test_basic"
        app:transKey="@string/languagecenter_test_basic_key"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_with_format"
        android:textSize="18sp"
        tools:text="@string/languagecenter_test_with_format"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
